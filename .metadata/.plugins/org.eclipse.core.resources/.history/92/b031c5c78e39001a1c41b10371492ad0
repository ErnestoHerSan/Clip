        Gson gson = new Gson();
        ApiResponseGetList[] persons = gson.fromJson(response.asString(),ApiResponseGetList[].class);

        System.out.println();
        
        for (ApiResponseGetList person : persons) {
            System.out.println(person.name.get(0));
        }

	}

